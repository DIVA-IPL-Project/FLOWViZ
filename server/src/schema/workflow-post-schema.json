{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/workflow-post.schema.json",
    "title": "workflowPostSchema",
    "description": "The workflow post schema",
    "type": "object",
    "properties": {
      "type": {
        "type": "string"
      },
      "name": {
        "type": "string"
      },
      "steps": {
        "type": "array",
        "items": [
                {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "action": {
                            "type": "object"
                        },
                        "previousActions": {
                            "type": "array"
                        },
                        "nextActions": {
                            "type": "array"
                        }
                    },
                    "required": [
                        "name",
                        "action"
                    ]
                }
            ]
        }
    },
    "required": [
        "type",
        "name",
        "steps"
    ]
}
 