{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/library.schema.json",
    "title": "libraryContractSchema",
    "description": "The library contract schema",
    "type": "object",
    "properties": {
      "name": {
        "type": "string"
      },
      "description": {
        "type": "string"
      },
      "api": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string"
          },
          "endpoints": {
            "type": "array",
            "items": [
              {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "url": {
                    "type": "string"
                  },
                  "method": {
                    "type": "string"
                  },
                  "headers": {
                    "type": "object"
                  },
                  "body": {
                    "type": "object"
                  }
                },
                "required": [
                  "name",
                  "description",
                  "url",
                  "method",
                  "headers",
                  "body"
                ]
              }
            ]
          }
        },
        "required": [
          "url",
          "endpoints"
        ]
      },
      "library": {
        "type": "object",
        "properties": {
          "machineAddress": {
            "type": "string"
          },
          "machinePort": {
            "type": "string"
          },
          "image": {
            "type": "string"
          },
          "callCommand": {
            "type": "string"
          },
          "arguments": {
            "type": "array",
            "items": [              
              {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "areOptionsAllowed": {
                    "type": "boolean"
                  },
                  "allowedCommands": {
                    "type": "array",
                    "items": [
                      {
                        "type": "string"
                      },
                      {
                        "type": "string"
                      },
                      {
                        "type": "string"
                      }
                    ]
                  }
                },
                "required": [
                  "name",
                  "areOptionsAllowed"
                ]
              }
            ]
          },
          "options": {
            "type": "array",
            "items": [
              {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "argument": {
                    "type": "string"
                  },
                  "alias": {
                    "type": "array",
                    "items": [
                      {
                        "type": "string"
                      }
                    ]
                  },
                  "valueType": {
                    "type": "string"
                  }
                },
                "required": [
                  "name",
                  "argument",
                  "alias",
                  "valueType"
                ]
              }
            ]
          }
        },
        "required": [
          "machineAddress",
          "machinePort",
          "image",
          "callCommand"
        ]
      }
    },
    "required": [
      "name",
      "description"
    ]
  }
  
  